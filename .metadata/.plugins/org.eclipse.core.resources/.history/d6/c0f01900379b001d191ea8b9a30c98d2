package br.com.project.palavra.caca.gameFunctions;

public class InsertWords extends NewGame{
	
	
	public void addWords() {
		
		// PALAVRA LAMBDA
		Character[][] lambda = new Character[6][1];
		tableGame[1][1] = 'A';
		tableGame[2][1] = 'D';
		tableGame[3][1] = 'B';
		tableGame[4][1] = 'M';
		tableGame[5][1] = 'A';
		tableGame[6][1] = 'L';
		NewGame.findWord.put("LAMBDA", lambda);
		
		// PALAVRA STRING
		Character[][] string = new Character[7][9];
		tableGame[7][9] = 'S';
		tableGame[6][8] = 'T';
		tableGame[5][7] = 'R';
		tableGame[4][6] = 'I';
		tableGame[3][5] = 'N';
		tableGame[2][4] = 'G';
		NewGame.findWord.put("STRING", string);
		
		// PALAVRA WRAPPER
		Character[][] wrapper = new Character[9][6];
		tableGame[9][0] = 'W';
		tableGame[9][1] = 'R';
		tableGame[9][2] = 'A';
		tableGame[9][3] = 'P';
		tableGame[9][4] = 'P';
		tableGame[9][5] = 'E';
		tableGame[9][6] = 'R';
		NewGame.findWord.put("WRAPPER", wrapper);
		
		// PALAVRA REFLECTION
		Character[][] reflection = new Character[9][8];
		tableGame[0][8] = 'R';
		tableGame[1][8] = 'E';
		tableGame[2][8] = 'F';
		tableGame[3][8] = 'L';
		tableGame[4][8] = 'E';
		tableGame[5][8] = 'C';
		tableGame[6][8] = 'T';
		tableGame[7][8] = 'I';
		tableGame[8][8] = 'O';
		tableGame[9][8] = 'N';
		NewGame.findWord.put("REFLECTION", reflection);
		
		// PALAVRA THREAD
		Character[][] thread = new Character[6][8];
		tableGame[6][8] = 'T';
		tableGame[6][7] = 'H';
		tableGame[6][6] = 'R';
		tableGame[6][5] = 'E';
		tableGame[6][4] = 'A';
		tableGame[6][3] = 'D';
		NewGame.findWord.put("THREAD", thread);
	}
}
